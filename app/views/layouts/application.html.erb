<!DOCTYPE html>
<html>
<head>
  <title>Habitual</title>
  <%= stylesheet_link_tag ["reset.css", "sticky_footer","defaults.css", "shared.css"] %>
  <%= javascript_include_tag ["lib/jquery-1.4.4.min", 
                              "lib/js-model-0.9.4.min", 
                              "lib/date",
                              "lib/sammy-0.6.2.min", 
                              "models/habit",
                              "plugins/habit_list"] %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
</head>
<body>

  <div id="wrap">
  	
  	<div id="header">
  	  <div id="auth">
        <% if user_logged_in? %>
          Current User: <%= current_user.uid %>
        <% else %>
          <fb:login-button perms="email"></fb:login-button>
        <% end %>
      </div>
      
      <div id="flash">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
  	</div>
  	
  	<div id="main">
  	  <div id="primary">
        <%= yield %>
  	  </div>
      <div id="secondary">
        <div id="mpu">
          Hello
        </div>
      </div>
  	</div>
  	
  </div>

  <div id="footer">
  </div>



<%= render :partial => 'shared/facebook_jds_sdk' %>

</body>
</html>
