<!DOCTYPE html>
<html>
<head>
  <title>Habitual</title>
  <%= stylesheet_link_tag ["reset.css", "sticky_footer","defaults.css", "layout.css", "shared.css", "pages.css"] %>
  <%= javascript_include_tag ["lib/jquery-1.4.4.min", 
                              "lib/js-model-0.9.4.min", 
                              "lib/date",
                              "lib/sammy-0.6.2.min", 
                              "models/habit",
                              "plugins/habit_list"] %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
  
  <script type="text/javascript" charset="utf-8">
    var logout = $.sammy(function(){
      this.get("#/logout", function(){
        FB.logout();
      })
    });
    
    $(function() {
      logout.run();    
    });
  </script>
  <%= render :partial => "shared/google_analytics" %>e
</head>
<body id="<%= controller.controller_name %>" class="<%= controller.action_name %>">
  <div id="wrap">
  	
  	<div id="header">
  	  <div id="masthead">
        <div id="logo"></div>
  	   <div id="banner-ad">
  	     <%= render :partial => "shared/google_banner_ad" %>
  	   </div>
  	  </div>
  	  
  	  <div id="auth">
        <% if user_logged_in? %>
          Current User: <%= current_user.uid %>
        <% else %>
          <fb:login-button perms="email"></fb:login-button>
        <% end %>
      </div>
      
      <div id="nav">
      </div>
      
      <div id="flash">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
  	</div>
  	
  	<div id="main">
  	  <div id="primary">
        <%= yield %>
  	  </div>
      <div id="secondary">
        <% if user_logged_in? %>
        <div id="profile">
          <div class="photo">
            <%= image_tag current_user.profile_url("square") %>
          </div>
          <div class="details">
            <%= current_user.name %> <%= link_to "(Logout)", "#/logout" %><br/>
            Currently developing <%= pluralize(current_user.habits.count, "habit") %>
          </div>
        </div>
        <% end %>
        <%= yield :secondary %>
        <div id="mpu"></div>
      </div>
  	</div>
  	
  </div>

  <div id="footer">
    This is some footer text
  </div>



<%= render :partial => 'shared/facebook_jds_sdk' %>

</body>
</html>
